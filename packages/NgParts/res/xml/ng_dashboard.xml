<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.libremobileos.support.preferences.SecureSettingListPreference
        android:key="power_menu_type"
        android:title="@string/power_menu_type_title"
        android:summary="%s"
        android:dialogTitle="@string/power_menu_type_title"
        android:entries="@array/power_menu_type_entries"
        android:entryValues="@array/power_menu_type_values"
        android:defaultValue="0" />

    <!-- Unlock FPS for specific games -->
    <SwitchPreference
        android:key="use_games_spoof"
        android:title="@string/use_games_spoof_title"
        android:summary="@string/use_games_spoof_summary"
        android:defaultValue="false" />

    <!-- Unlimited google photos storage -->
    <SwitchPreference
        android:key="use_photos_spoof"
        android:title="@string/use_photos_spoof_title"
        android:summary="@string/use_photos_spoof_summary"
        android:defaultValue="false" />

    <!-- Netflix -->
    <SwitchPreference
        android:key="use_netflix_spoof"
        android:title="@string/netflix_spoof_title"
        android:summary="@string/netflix_spoof_summary"
        android:defaultValue="false" />

    <Preference
        android:title="@string/navbar_tuner_title"
        android:summary="@string/navbar_tuner_summary" >
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.android.systemui"
            android:targetClass="com.android.systemui.tuner.NavbarActivity" />
	</Preference>

</PreferenceScreen>
